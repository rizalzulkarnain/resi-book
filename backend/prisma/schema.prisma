// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Resi    Resi[]
  Comment Comment[]
  @@map("user")
}

model Resi {
  id           String  @id @default(cuid())
  numberResi   String  @unique
  productName  String
  address      String
  courier      String
  status       String
  date         String
  priceProduct Decimal @db.Money
  postagePrice Decimal @db.Money

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  Comment Comment[]
  @@map("resi")
}

model Comment {
  id      String  @id @default(cuid())
  message String?

  user      User?   @relation(fields: [messageBy], references: [email])
  messageBy String?
  resi      Resi?   @relation(fields: [resiId], references: [id])
  resiId    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comment")
}

model ResetPin {
  id    String  @id @default(cuid())
  email String?
  pin   Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("resetPin")
}
